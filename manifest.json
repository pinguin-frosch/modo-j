{
    "manifest_version": 3,
    "name": "Modo J",
    "description": "Bloquea los sitios que desees y mejora tu productividad",
    "version": "1.0.2",
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage",
        "tabs"
    ],
    "icons": {
        "16": "images/icon-j-16.png",
        "32": "images/icon-j-32.png",
        "48": "images/icon-j-48.png",
        "64": "images/icon-j-64.png",
        "128": "images/icon-j-128.png",
        "256": "images/icon-j-256.png"
    },
    "action": {
        "default_popup": "popup/popup.html"
    },
    "options_page": "options/options.html"
}